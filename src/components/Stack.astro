---
/* 
    This component was  
    provided by "AstroUI" free and open source AstroUI components library.
    Link: https://astroui.vercel.app/
*/
import cv from "@cv";
import Image from "astro/components/Image.astro";

/* 
    Logo were provided by "svgl" free and open source icons library.
    Link: https://svgl.app/
*/
const {
  stack: { sectionLabel, logos },
} = cv;
---

<section
  class="relative w-full text-center flex flex-col justify-center items-center gap-10 max-w-3xl px-4 py-20 sm:py-24 pointer-events-none"
>
  <h2
    class="absolute top-[-20px] h-10 flex items-center p-6 rounded-full perfect-shadow text-foreground text-sm sm:text-normal md:text-lg tracking-tighter bg-card"
  >
    {sectionLabel}
  </h2>
  <div
    class="w-full h-fit max-w-3xl flex flex-col justify-center items-center selection:select-none "
  >
    <div class="flex justify-center align-center flex-wrap gap-8 ">
      {
        logos
          .map((logo) => (
            <Image
              src={logo.src}
              alt={logo.alt}
              width={40}
              height={20}
              loading="eager"
              class="size-18 object-contain"
            />
          ))
      }
    </div>
  </div>
</section>
